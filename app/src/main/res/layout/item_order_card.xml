<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.Guideline
                android:id="@+id/orderGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="vertical"/>

        <TextView
                android:id="@+id/orderIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="#3"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/orderAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                style="@style/CardTinyLabel"
                android:layout_marginTop="12dp"
                android:layout_marginStart="@dimen/order_card_left_text_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SmallSp"/>

        <TextView
                android:id="@+id/orderAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="str. Teilor, nr. 10"
                style="@style/CardDetailsText"
                android:layout_marginStart="@dimen/order_card_left_text_margin"
                app:layout_constraintTop_toBottomOf="@id/orderAddressLabel"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/orderDeliverToLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deliver_to"
                style="@style/CardTinyLabel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/order_card_left_text_margin"
                app:layout_constraintTop_toBottomOf="@id/orderAddressTextView"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/orderRecipientTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cristina"
                style="@style/CardDetailsText"
                android:layout_marginStart="@dimen/order_card_left_text_margin"
                app:layout_constraintTop_toBottomOf="@id/orderDeliverToLabel"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/orderContentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                style="@style/CardTinyLabel"
                app:layout_constraintStart_toStartOf="@id/orderGuideline"
                app:layout_constraintTop_toTopOf="@id/orderDeliverToLabel"/>

        <TextView
                android:id="@+id/orderContentsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 Daffodils"
                style="@style/CardDetailsText"
                app:layout_constraintTop_toBottomOf="@id/orderContentsLabel"
                app:layout_constraintStart_toStartOf="@id/orderGuideline"/>

        <ImageView
                android:id="@+id/orderDoneImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>